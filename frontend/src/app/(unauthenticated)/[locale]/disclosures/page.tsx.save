import Link from 'next/link'; type LinkItem = { label: string; href: string };

const generalLinks = [ {label:"Todd Privacy Policy, English", href: "#"}, {label:"Todd Privacy Policy, EU", 
    href: "#"}, {label:"Todd Privacy Policy, Japan", href: "#"}
];

const ukLinks = [ {label:"Modern Slavery Act Statement", href: "#"} ];

function LinkList({ linkItem }: { linkItem: LinkItem[] }) { return( <ul className="mt-1 space-y-2"> 
            {linkItem.map((item: LinkItem) => (
                <li key={item.label}> <Link href={item.href} className="text-sm underline underline-offset-4 
                          hover:opacity-80"
                    >
                        {item.label} </Link>
                </li>
                ))}
        </ul>
    );
}

